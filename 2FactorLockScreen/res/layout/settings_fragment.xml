<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_fragment"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_statement"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="144dp"
        android:text="@string/muster_Activation_LBL"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/SpeechActivationBtn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/musterActivationBtn"
        android:layout_below="@+id/tv_statement"
        android:layout_marginTop="21dp"
        android:background="@drawable/switch_in_active" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/SpeechActivationBtn"
        android:layout_alignBottom="@+id/SpeechActivationBtn"
        android:layout_alignLeft="@+id/textView1"
        android:text="@string/speech_Activation_LBL"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/musterActivationBtn"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:background="@drawable/switch_active" />

    <TextView
        android:id="@+id/tv_statement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/Einstellungen_Lbl" />

</RelativeLayout>